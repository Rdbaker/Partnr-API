<div id="conversation-wrapper">
  <% messages.forEach(function(message) { %>
    <% var sender = message.escape('sender'); %>
    <% var body = message.escape('message'); %>
    <div id="message-content">
      <div class="text-warning" id="message-sender">
        <% if(sender === window.user.name) { %>
          You
        <% } else { %>
          <%= sender %>
        <% } %>
      </div>
      <%= body %>
    </div>
  <% }); %>
</div>
<div id="send-message-wrapper">
  <input type="text" id="send-message-content">
  <div class="btn btn-success" id="send-message-btn">
    Send
  </div>
</div>
